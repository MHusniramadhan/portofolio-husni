<!DOCTYPE html>
<html>
<head>
    <link rel="icon" href="public/assets/logo.png">
    <title>Creating Contact Form</title>
    <link rel="stylesheet" href="public/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <!-- Nav Start -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-lg">
        <a class="navbar-brand me-5" href="/home">
          <img src="public/assets/logo.png" alt="logo" />
        </a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/home">Home</a>
            </li>
            <li class="nav-item">
              <a href="/blog" class="nav-link list-active">Add Project</a>
            </li>
          </ul>
        </div>
        <div class="d-flex contact-me">
          <a href="/contact-me"> Contact Me </a>
        </div>
      </div>
    </nav>
    <!-- nav end -->
        <div class="form-contact">
            <div class="container-form">
                <form>
            <div>
                <label for="input-name">Name</label>
                <input type="text"id="input-name" />
            </div>
            <div>
                <label for="input-email">Email</label>
                <input type="email" id="input-email" />
            </div>
            <div>
                <label for="input-phone">Phone Number</label>
                <input type="text" id="input-phone" placeholder="input phone number" required  />
            </div>    
            <div>
                <label for="input-subject" >Subject</label>
                <select id="input-subject" >
                    <option value="Lets Talk">Lets Talk</option>
                    <option value="Lets Colaboration">Lets Colaboration</option>
                    <option value="I Am Hiring">I Am Hiring</option>
                </select>
            </div>
            <div>
                <label for="input-message" > Your Message</label>
                <textarea type="text" id="input-message" ></textarea>
            </div>
            <button type="button" onclick="showData()" >Submit</button>
        </form>
     </div>
    </div>
    <script src="submitForm.js"></script>
</body>
</html>