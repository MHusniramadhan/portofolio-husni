      <!-- project -->
      <!-- Form -->
      <div class="project">
        <div class="project-form">
          <div class="form-container">
            <form onsubmit="addProject(event)">
              <h1>UPDATE MY PROJECT</h1>
              <div>
                <label for="input-project-name">Project Name</label>
                <input id="input-project-name" />
              </div>
                  <div class="datatimer">
                     <div>
                     <label for="input-project-stardate">Star Date</label>
                     <input type="date" id="input-project-stardate">
                     </div>
                     <div class="date-right">
                     <label class="endname" for="input-project-enddate">End Date</label>
                     <input type="date" id="input-project-enddate">
                     </div>
                  </div>
                <div>
                <label for="input-project-content">Description</label>
                <textarea id="input-project-content"></textarea>
              </div>
              <H3>Tecnologies<h3>
               <div class="checkbox-detail">
                 <div class="category1">
                   <input type="checkbox" id="input-project-checkbox" name="boxes" value="node-js.png">
                   <label>Node js</label>
                 </div>
                 <div class="category1">
                   <input type="checkbox" id="input-project-checkbox" name="boxes" value="React-js.png">
                   <label>React Js</label>
                 </div>
                </div>
                <div class="checkbox-detailing">
                  <div class="category2">
                    <input type="checkbox" id="input-project-checkbox" name="boxes" value="java-script.png">
                    <label>Next js</label>
                  </div>
                  <div class="category2">
                    <input type="checkbox" id="input-project-checkbox" name="boxes" value="TypeScript.png">
                    <label>TypeScript</label>
                  </div>
                </div>
                  
              <div>
                <label>Upload Image</label>
                <div class="input-project-image-group">
                  <label for="input-project-image">
                    <p>Choose<p>
                    <img src="public/assets/file.png" alt="file" />
                  </label>
                  <input type="file" id="input-project-image" hidden />
                </div>
              </div>
              <div class="button-group">
                <button>Submit</button>
              </div>
              <div id="test"></div>
            </form>
          </div>
        </div>
       
      <script src="myproject.js"></script>
    </body>
